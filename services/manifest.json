{
  "manifest_version": 3,
  "name": "CGN Fantastic Four Searcher",
  "version": "1.0",
  "description": "Search CheapGraphicNovels.com for Fantastic Four Omnibus",
  "permissions": ["scripting", "tabs"],
  "host_permissions": [
    "https://cheapgraphicnovels.com/*"
  ],
  "background": {
    "service_worker": "searchTrigger.js"
  },
  "action": {
    "default_title": "Search for Fantastic Four Omnibus",
    "default_icon": {
      "16": "pow.png",
      "48": "pow.png",
      "128": "pow.png"
    }
  },
  "icons": {
    "16": "pow.png",
    "48": "pow.png",
    "128": "pow.png"
  }
}
